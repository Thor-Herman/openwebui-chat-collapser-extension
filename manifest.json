{
  "manifest_version": 3,
  "name": "OpenWebUI Chat Collapser",
  "version": "1.0",
  "description": "Add collapse/expand toggles to OpenWebUI chat messages",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://127.0.0.1/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": ["dist/content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
